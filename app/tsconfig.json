{
	"compilerOptions": {
		"outDir": "./",
		"sourceMap": true,
		"noImplicitAny": true,
		"module": "commonjs",
		"target": "es6",
		"strictNullChecks": true,
		"typeRoots": [
			"./@types",
			"./node_modules/@types"
		],
		"rootDir": "./src"
	},
	"include": [
		"./src/**/*.ts"
	],
	"exclude": [
		"./node_modules"
	],
	"files": [
		"./src/Index.ts"
	]
}
